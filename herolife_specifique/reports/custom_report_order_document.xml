<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="hero_report_saleorder_document" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t[@t-name='sale.report_saleorder_document']" position="replace">
                <t t-name="sale.report_saleorder_document">
                     <t t-call="web.external_layout">
                        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                        <div class="page">
                            <div class="oe_structure"/>
                            <tbody >
                            <table style="width:100%; !important">
                                <tr>
                                    <td style="width:50%; !important">
                                        <h1>
                                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                            <span t-if="doc.state not in ['draft','sent']">Sale Order</span>
                                            <span t-if="doc.state in ['draft','sent']">Quotation</span>
                                        </t>
                                        <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                            <span>Pro-Forma Invoice</span>
                                        </t>
                                        </h1>
                                     <div>
                                        <strong>Order Date:</strong>
                                         <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                                    </div>
                                     <div>
                                        <strong>Sales order No :</strong>
                                         <span t-field="doc.name"/>
                                    </div>
                                    <div t-if="doc.partner_id.ref">
                                        <strong>Client ID :</strong>
                                         <span t-field="doc.partner_id.ref"/>
                                    </div>
                                   <div t-if="doc.client_order_ref">
                                        <strong>Client reference :</strong>
                                         <span t-field="doc.client_order_ref"/>
                                    </div>

                                    </td>
                                    <td>
                                        <h3>
                                        <span t-field="doc.partner_id.name"/>
                                        </h3>
                                        <div t-field="doc.partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "phone", "mobile", "email"], "no_marker": True}' />
                                        <div t-if="doc.partner_id.vat">
                                            <strong>VAT No :</strong>
                                            <span t-field="doc.partner_id.vat"/>
                                    </div>
                                    </td>
                                </tr>
                            </table>
                            </tbody>


                            <!-- Is there a discount on at least one line? -->
                            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

                            <table  style="width:100% !important;">
                                <thead>
                                    <tr>
                                        <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">Qty</th>
                                        <th t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">Code</th>
                                        <th> Description</th>
                                        <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">Gross price</th>
                                        <th t-if="display_discount" groups="product.group_discount_per_so_line" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Disc.%</span>
                                        </th>
                                        <th t-if="display_discount" groups="product.group_discount_per_so_line" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Net Price</span>
                                        </th>
<!--                                        <th>Taxes</th>-->
                                        <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <t groups="account.group_show_line_subtotals_tax_excluded">Total</t>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody >

                                    <t t-set="current_subtotal" t-value="0"/>

                                    <t t-foreach="doc.order_line" t-as="line">

                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr style="padding: 5px 5px; !important" t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type">
                                                <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-field="line.product_uom_qty"/>
                                                </td>
                                                <td name="td_Code" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-field="line.product_id.default_code"/>
                                                </td>
                                                <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span t-field="line.product_id.name"/></td>
                                                <td name="td_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-field="line.price_unit"/>
                                                </td>
                                                <td t-if="display_discount" groups="product.group_discount_per_so_line" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-field="line.discount"/>
                                                </td>
                                                <td t-if="display_discount" groups="product.group_discount_per_so_line" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-field="line.price_reduce"/>
                                                </td>
<!--                                                <td name="td_taxes" >-->
<!--                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>-->
<!--                                                </td>-->
                                                <td name="td_subtotal" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td name="td_section_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td name="td_note_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                        </tr>
                                        <t t-if="line_last and doc.partner_id.id != doc.partner_shipping_id.id">
                                            <tr>
                                                <td name="td_note_line" colspan="99">
                                                    <span>Shipped to : </span>
                                                    <div t-field="doc.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True, "separator": "-"}'/>
                                                </td>
                                            </tr>
                                        </t>

                                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-right">
                                                <td name="td_section_subtotal" colspan="99">
                                                    <strong class="mr16">Subtotal</strong>
                                                    <span
                                                        t-esc="current_subtotal"
                                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                                    />
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>

                            <div class="clearfix" name="so_total_summary">
                                <div id="total" class="row" name="total">
                                        <table style="width:100% !important;">
                                            <tr>
                                                <td style="width:60% !important;">
                                                    <div>
                                                        <strong>PAYMENT TERMS </strong>
                                                    </div>
                                                    <div>
                                                        <span>Payable to</span>
                                                        <span><span t-field="doc.company_id.name"/></span>
                                                    </div>
                                                    <div t-if="doc.payment_term_id.note">
                                                        <span t-field="doc.payment_term_id.note"/>
                                                    </div>
                                                    <p><br/><span>Terms and conditions :</span><span>www.herolife.net</span></p>
                                                </td>
                                                <td>
                                                    <table class="table table-sm">
                                                        <tr class="o_subtotal" style="">
                                                            <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                                                            <td name="td_amount_untaxed" class="text-right">
                                                                <span t-field="doc.amount_untaxed"/>
                                                            </td>
                                                        </tr>
                                                        <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                                            <tr style="">
                                                                <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                                                    <td name="td_amount_by_group_label_3">
                                                                        <span t-esc="amount_by_group[0]"/>
                                                                        <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/></span>
                                                                    </td>
                                                                    <td name="td_amount_by_group_3" class="text-right o_price_total">
                                                                        <span t-esc="amount_by_group[1]"
                                                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                                    </td>
                                                                </t>
                                                                <t t-else ="">
                                                                    <td name="td_amount_by_group_label">
                                                                        <span t-esc="amount_by_group[0]"/>
                                                                    </td>
                                                                    <td name="td_amount_by_group" class="text-right o_price_total">
                                                                        <span t-esc="amount_by_group[1]"
                                                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                                    </td>
                                                                </t>
                                                            </tr>
                                                        </t>
                                                        <tr class="border-black o_total">
                                                            <td name="td_amount_total_label"><strong>Total</strong></td>
                                                            <td name="td_amount_total" class="text-right">
                                                                <span t-field="doc.amount_total"/>
                                                            </td>
                                                        </tr>
                                                </table>
                                                </td>
                                            </tr>
                                        </table>
                                </div>
                            </div>

                            <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                                <div class="offset-8">
                                    <strong>Signature</strong>
                                </div>
                                <div class="offset-8">
                                    <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                                </div>
                                <div class="offset-8 text-center">
                                    <p t-field="doc.signed_by"/>
                                </div>
                            </div>

                            <div class="oe_structure"/>

                            <p t-field="doc.note" />

                        </div>
                    </t>
                </t>

            </xpath>
        </template>


    </data>
</odoo>
