<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_invoice_with_payments" inherit_id="account.report_invoice_with_payments">
            <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="ingeneo_specifique.report_invoice_document_with_payments" t-lang="lang"/>
                </t>
            </t>
            </xpath>
        </template>

        <template id="ingeneo_specifique.report_invoice_document_with_payments" inherit_id="ingeneo_specifique.ingeneo_report_invoice_document">
            <xpath expr="//div[@id='total']/div/table" position="inside">
                <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                <t t-foreach="payments_vals" t-as="payment_vals">
                    <tr>
                        <td>
                            <i class="oe_form_field text-right oe_payment_label">Payé le <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                        </td>
                        <td class="text-right">
                            <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
                <t t-if="len(payments_vals) > 0">
                    <tr class="border-black">
                        <td style="padding: 5px; color: black !important;  background-color: white !important;">
                            <strong style="color: black !important;">Reste à payer</strong>
                        </td>
                        <td class="text-right" style="color: black !important;  background-color: white !important;">
                            <span t-field="o.amount_residual"
                                  t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
